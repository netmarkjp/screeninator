<% if @default_config %>
<%= @default_config %>
<% else %>
startup_message off
vbell off
autodetach on
defscrollback 10000
hardstatus alwayslastline
hardstatus string '%{= kg}[ %{G} <%= @project_name %> %{g}][%= %{= kw}%?%-Lw%?%{r} (%{W}%n*%f %t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m/%d %{W}%c %{g}]'
<% end %>
escape <%= @escape || "``" %>

chdir "<%= @project_root %>"

<% @tabs.each do |tab| %>
screen -t <%= tab.name %> <%= @tabs.index(tab) + 1 %>
stuff "<%= tab.stuff %>\012"
<% end %>

select 1
